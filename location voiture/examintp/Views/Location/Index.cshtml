@model IEnumerable<Location>

@{
    ViewData["Title"] = "Liste des Locations";
}

<h1>Liste des Locations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nouvelle Location</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date Début</th>
            <th>Durée (jours)</th>
            <th>Prix</th>
            <th>Voiture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@location.DateDebutLocation.ToShortDateString()</td>
                <td>@location.Duree</td>
                <td>@location.Prix</td>
                <td>@location.Voiture.Matricule</td>
                <td>
                    <a asp-action="Details" asp-route-id="@location.Id" class="btn btn-info btn-sm">Détails</a>
                    <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
