@model EditViewModel

@{
    ViewData["Title"] = "Edit Film";
    var photoPath = "~/images/" + (Model.ExistingImagePath ?? "noimage.jpg");
}

<h1>Edit Film</h1>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="FilmId" />
    <input type="hidden" asp-for="ExistingImagePath" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QteStock"></label>
        <input asp-for="QteStock" class="form-control" />
        <span asp-validation-for="QteStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CinemaId"></label>
        <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.CinemaId"></select>
        <span asp-validation-for="CinemaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <img src="@photoPath" width="120" height="120" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
